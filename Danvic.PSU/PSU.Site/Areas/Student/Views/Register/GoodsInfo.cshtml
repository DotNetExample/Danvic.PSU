@model PSU.Model.Areas.Student.GoodsDetailViewModel
@{
    Layout = null;
    ViewData["Title"] = "选择物品";
    ViewData["NavTitle"] = "入学报名";
}

<div class="row">
    @if (Model != null)
    {
        <div class="col-md-12">
            <table class="profile-user-info profile-user-info-striped">
                <tr class="profile-info-row">
                    <th class="profile-info-name">物品名称</th>
                    <td class="profile-info-value">@Model.Name</td>
                    <th class="profile-info-name">物品编号</th>
                    <td class="profile-info-value">@Model.Id</td>
                </tr>
                <tr class="profile-info-row">
                    <th class="profile-info-name">物品尺寸</th>
                    <td class="profile-info-value" colspan="3">@Model.Size</td>
                </tr>
                <tr class="profile-info-row">
                    <th class="profile-info-name">物品描述</th>
                    <td class="profile-info-value" colspan="3">@Model.Description</td>
                </tr>
            </table>
        </div>
    }
</div>

