
@{
    ViewData["Title"] = "公告列表";
    ViewData["NavTitle"] = "我的大学";
}

<section class="content">
    <div class="card">
        <div class="header">
            <h2>
                <i class="ion ion-clipboard"></i>
                公告列表
            </h2>
        </div>
        <div class="body">
            <div class="row">
                <div class="form-group col-md-3">
                    <label class="control-label no-padding-right col-md-5 col-xs-4" for="title">公告标题：</label>
                    <div class="input-group col-md-7 col-xs-8">
                        <input id="title" type="text" class="form-control">
                        <div class="input-group-addon">
                            <i class="fa fa-bookmark"></i>
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label no-padding-right col-md-5 col-xs-4" for="datetime">发布时间：</label>
                    <div class="input-group col-md-7 col-xs-8">
                        <input id="datetime" class="form-control date-picker" type="text" readonly />
                        <span class="input-group-addon">
                            <i class="fa fa-calendar bigger-110"></i>
                        </span>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label no-padding-right col-md-5 col-xs-4" for="type">公告类型：</label>
                    <div class="input-group col-md-7 col-xs-8">
                        <select id="type" class="form-control">
                            <option value="0">请选择</option>
                            <option value="1">新闻公告</option>
                            <option value="2">学校政策</option>
                        </select>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    <button id="search" class="btn btn-dropbox btn-flat col-md-4">
                        <i class="fa fa-search"></i>&nbsp;搜索
                    </button>
                    <a asp-area="Student" asp-controller="Home" asp-action="Index" class="btn btn-success btn-flat col-md-4 col-xs-offset-1 col-md-offset-1">
                        <i class="fa fa-reply"></i>&nbsp;返回
                    </a>
                </div>
            </div>
            <div class="row">
                @await Html.PartialAsync("_BulletinTablePartial")
            </div>
        </div>
    </div>
</section>

@section scripts{
    <environment include="Development">
        <script src="~/javascript/view/Student/bulletin.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/javascript/view/Student/bulletin.min.js" asp-append-version="true"></script>
    </environment>
}

