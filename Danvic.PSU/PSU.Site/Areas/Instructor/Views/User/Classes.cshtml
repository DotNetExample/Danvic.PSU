
@{
    ViewData["Title"] = "我的班级";
    ViewData["NavTitle"] = "我的班级管理";
    ViewData["CurrName"] = "";
}

<section class="content-header">
    <h1>
        我的班级
        <small>My Classes</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a asp-area="Instructor" asp-controller="Home" asp-action="Index">
                <i class="fa fa-dashboard"></i> 首页
            </a>
        </li>
        <li class="active">我的班级</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group col-md-3">
                <label class="control-label no-padding-right col-md-5 col-xs-4" for="name">班级名称：</label>
                <div class="input-group col-md-7 col-xs-8">
                    <input id="name" type="text" class="form-control">
                    <div class="input-group-addon">
                        <i class="fa fa-pencil-square-o"></i>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label no-padding-right col-md-5 col-xs-4" for="classname">专业名称：</label>
                <div class="input-group col-md-7 col-xs-8">
                    <input id="classname" type="text" class="form-control">
                    <div class="input-group-addon">
                        <i class="fa fa-id-badge"></i>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label no-padding-right col-md-5 col-xs-4" for="qq">班级QQ：</label>
                <div class="input-group col-md-7 col-xs-8">
                    <input id="qq" type="text" class="form-control">
                    <div class="input-group-addon">
                        <i class="fa fa-qq"></i>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-3">
                <button id="search" class="btn btn-dropbox btn-flat col-md-4">
                    <i class="fa fa-search"></i>&nbsp;搜索
                </button>
            </div>
        </div>
    </div>
    <div class="row">
        @await Html.PartialAsync("_ClassesTablePartial")
    </div>
</section>

@section scripts{
    <environment include="Development">
        <script src="~/javascript/view/Instructor/classes.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/javascript/view/Instructor/classes.min.js" asp-append-version="true"></script>
    </environment>
}