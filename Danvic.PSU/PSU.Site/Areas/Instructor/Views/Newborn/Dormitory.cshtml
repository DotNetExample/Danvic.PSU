
@{
    ViewData["Title"] = "新生疑问";
    ViewData["NavTitle"] = "新生宿舍选择";
    ViewData["CurrName"] = "";
}

<section class="content-header">
    <h1>
        新生宿舍
        <small>Student's Dormitory</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a asp-area="Instructor" asp-controller="Home" asp-action="Index">
                <i class="fa fa-dashboard"></i> 首页
            </a>
        </li>
        <li class="active">新生宿舍</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group col-md-3">
                <label class="control-label col-md-5 col-xs-4" for="student">学生姓名：</label>
                <div class="input-group col-md-7 col-xs-8">
                    <input id="student" type="text" class="form-control">
                    <div class="input-group-addon">
                        <i class="fa fa-user"></i>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label col-md-5 col-xs-4" for="name">宿舍名称：</label>
                <div class="input-group col-md-7 col-xs-8">
                    <input id="name" type="text" class="form-control">
                    <div class="input-group-addon">
                        <i class="fa fa-bed"></i>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label col-md-5 col-xs-4" for="building">宿舍楼：</label>
                <div class="input-group col-md-7 col-xs-8">
                    <input id="building" type="text" class="form-control">
                    <div class="input-group-addon">
                        <i class="fa fa-building"></i>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-3">
                <button id="search" class="btn btn-dropbox btn-flat col-md-4">
                    <i class="fa fa-search"></i>&nbsp;搜索
                </button>
            </div>
        </div>
    </div>
    <div class="row">
        @await Html.PartialAsync("_DormitoryTablePartial")
    </div>
</section>

@section scripts{
    <environment include="Development">
        <script src="~/javascript/view/Instructor/dormitory.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/javascript/view/Instructor/dormitory.min.js" asp-append-version="true"></script>
    </environment>
}