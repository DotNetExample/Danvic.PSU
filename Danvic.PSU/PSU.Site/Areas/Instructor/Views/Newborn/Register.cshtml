
@{
    ViewData["Title"] = "新生报名";
    ViewData["NavTitle"] = "新生报名情况";
    ViewData["CurrName"] = "";
}

<section class="content-header">
    <h1>
        新生报名
        <small>Student's Register</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a asp-area="Instructor" asp-controller="Home" asp-action="Index">
                <i class="fa fa-dashboard"></i> 首页
            </a>
        </li>
        <li class="active">新生报名</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group col-md-3">
                <label class="control-label no-padding-right col-md-5 col-xs-4" for="name">学生姓名：</label>
                <div class="input-group col-md-7 col-xs-8">
                    <input id="name" type="text" class="form-control">
                    <div class="input-group-addon">
                        <i class="fa fa-user"></i>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label no-padding-right col-md-5 col-xs-4" for="datetime">报名日期：</label>
                <div class="input-group col-md-7 col-xs-8">
                    <input id="datetime" class="form-control date-picker" type="text" readonly />
                    <span class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </span>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label no-padding-right col-md-5 col-xs-4" for="name">到达地点：</label>
                <div class="input-group col-md-7 col-xs-8">
                    <select name="" class="form-control">
                        <option value="">请选择</option>
                        <option value="">火车站</option>
                        <option value="">汽车站</option>
                        <option value="">飞机场</option>
                        <option value="">港口</option>
                        <option value="">学校</option>
                    </select>
                </div>
            </div>
            <div class="form-group col-md-3">
                <button id="search" class="btn btn-dropbox btn-flat col-md-4">
                    <i class="fa fa-search"></i>&nbsp;搜索
                </button>
            </div>
        </div>
    </div>
    <div class="row">
        @await Html.PartialAsync("_RegisterTablePartial")
    </div>
</section>

@section scripts{
    <environment include="Development">
        <script src="~/javascript/view/Instructor/register.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/javascript/view/Instructor/register.min.js" asp-append-version="true"></script>
    </environment>
}