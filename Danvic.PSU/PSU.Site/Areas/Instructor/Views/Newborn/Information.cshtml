
@{
    ViewData["Title"] = "新生数据";
    ViewData["NavTitle"] = "新生数据管理";
    ViewData["CurrName"] = "";
}

<section class="content-header">
    <h1>
        新生数据
        <small>Student's Data</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a asp-area="Instructor" asp-controller="Home" asp-action="Index">
                <i class="fa fa-dashboard"></i> 首页
            </a>
        </li>
        <li class="active">新生数据</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group col-md-3">
                <label class="control-label no-padding-right col-md-5 col-xs-4" for="id">学生学号：</label>
                <div class="input-group col-md-7 col-xs-8">
                    <input id="id" type="text" class="form-control">
                    <div class="input-group-addon">
                        <i class="fa fa-id-badge"></i>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label no-padding-right col-md-5 col-xs-4" for="name">学生姓名：</label>
                <div class="input-group col-md-7 col-xs-8">
                    <input id="name" type="text" class="form-control">
                    <div class="input-group-addon">
                        <i class="fa fa-user"></i>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label no-padding-right col-md-5 col-xs-4" for="majorclass">专业班级：</label>
                <div class="input-group col-md-7 col-xs-8">
                    <input id="majorclass" type="text" class="form-control">
                    <div class="input-group-addon">
                        <i class="fa fa-edit"></i>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-3">
                <button id="search" class="btn btn-dropbox btn-flat col-md-4">
                    <i class="fa fa-search"></i>&nbsp;搜索
                </button>
            </div>
        </div>
    </div>
    <div class="row">
        @await Html.PartialAsync("_InformationTablePartial")
    </div>
</section>

@section scripts{
    <environment include="Development">
        <script src="~/javascript/view/Instructor/information.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/javascript/view/Instructor/information.min.js" asp-append-version="true"></script>
    </environment>
}