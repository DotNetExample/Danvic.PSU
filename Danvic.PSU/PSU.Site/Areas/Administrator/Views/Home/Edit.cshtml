
@{
    ViewData["Title"] = "编辑公告";
    ViewData["NavTitle"] = "网站公告管理";
    ViewData["CurrName"] = "";
}

@section styles{
    <environment include="Development">
        <link href="~/css/template/simditor.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/css/template/simditor.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
}

<section class="content-header">
    <h1>
        网站公告
        <small>Site Bulletin</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a asp-area="Administrator" asp-controller="Home" asp-action="Index">
                <i class="fa fa-dashboard"></i> 首页
            </a>
        </li>
        <li class="active">网站公告</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-lg-12 col-sm-12">
            <form asp-area="Administrator" asp-controller="Home" asp-action="Edit" method="post" class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-sm-2 col-xs-3 control-label no-padding-right" for="title"> 标题： </label>
                    <div class="col-sm-4 col-xs-9">
                        <input class="col-sm-5 col-xs-12 form-control" id="title" type="text" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-xs-3 control-label no-padding-right" for="target"> 目标： </label>
                    <div class="col-sm-2 col-xs-9">
                        <select id="target" class="form-control">
                            <option value="">请选择</option>
                            <option value="">全部用户</option>
                            <option value="">教职工用户</option>
                            <option value="">新生用户</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-xs-3 control-label no-padding-right" for="type"> 类型： </label>
                    <div class="col-sm-2 col-xs-9">
                        <select id="type" class="form-control">
                            <option value="">请选择</option>
                            <option value="">新闻公告</option>
                            <option value="">学校政策</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-xs-3 control-label no-padding-right" for="editor"> 内容： </label>
                    <div class="col-sm-9 col-xs-9">
                        <textarea class="col-sm-6" rows="3" id="editor"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-1">
                        <button type="submit" class="btn btn-primary btn-flat">
                            <i class="fa fa-check"></i>
                            <span>&nbsp;提交</span>
                        </button>
                    </div>
                    <div class="col-sm-1">
                        <a asp-area="Administrator" asp-controller="Home" asp-action="Bulletin" class="btn btn-reddit btn-flat">
                            <i class="fa fa-undo"></i>
                            <span>&nbsp;返回</span>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section scripts{
    <environment include="Development">
        <script src="~/javascript/template/module.js"></script>
        <script src="~/javascript/template/hotkeys.js"></script>
        <script src="~/javascript/template/uploader.js"></script>
        <script src="~/javascript/template/simditor.js"></script>
        <script src="~/javascript/view/Administrator/edit.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/javascript/view/Administrator/edit.min.js" asp-append-version="true"></script>
    </environment>
}