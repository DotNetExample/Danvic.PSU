<div class="col-xs-12">
    <div class="box">
        <div class="box-body">
            <table id="bulletin-table" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th class="text-center">编号</th>
                        <th class="text-center">标题</th>
                        <th class="text-center">公告内容</th>
                        <th class="text-center">公告类型</th>
                        <th class="text-center">发布时间</th>
                        <th class="text-center">发布人</th>
                        <th class="text-center">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i < 16; i++)
                    {
                    <tr class="text-center">
                        <td>@i</td>
                        <td>这是标题啊啊啊啊</td>
                        <td>打生打死大家可能会减少贷款然后就开始了</td>
                        <td>公告</td>
                        <td>2017-10-24</td>
                        <td>发布人</td>
                        <td>
                            <a class="btn btn-xs btn-link" id="detail">
                                <i class="fa fa-info"></i>
                                查看
                            </a>
                            <a asp-area="" asp-controller="" asp-action="" class="btn btn-xs btn-link">
                                <i class="fa fa-pencil"></i>
                                编辑
                            </a>
                            <a class="btn btn-xs btn-link" id="delete">
                                <i class="fa fa-trash-o"></i>
                                删除
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


