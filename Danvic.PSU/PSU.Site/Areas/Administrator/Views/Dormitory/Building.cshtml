
@{
    ViewData["Title"] = "宿舍楼信息";
    ViewData["NavTitle"] = "宿舍信息管理";
    ViewData["CurrName"] = "宿舍楼信息维护";
}

<section class="content-header">
    <h1>
        宿舍楼信息
        <small>Building Information</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a asp-area="Administrator" asp-controller="Home" asp-action="Index">
                <i class="fa fa-dashboard"></i> 首页
            </a>
        </li>
        <li>宿舍信息</li>
        <li class="active">宿舍楼信息</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group col-md-3">
                <label class="control-label no-padding-right col-md-5 col-xs-4" for="code">宿舍楼：</label>
                <div class="input-group col-md-7 col-xs-8">
                    <input id="code" type="text" class="form-control">
                    <div class="input-group-addon">
                        <i class="fa fa-building"></i>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label no-padding-right col-md-5 col-xs-4" for="type">类型：</label>
                <div class="input-group col-md-7 col-xs-8">
                    <select id="type" name="" class="form-control">
                        <option value="">请选择</option>
                        <option value="">男生寝室</option>
                        <option value="">女生寝室</option>
                        <option value="">混合寝室</option>
                    </select>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label no-padding-right col-md-5 col-xs-4" for="campus">所属校区：</label>
                <div class="input-group col-md-7 col-xs-8">
                    <select id="campus" name="" class="form-control">
                        <option value="">请选择</option>
                        <option value="">我是新校区名称</option>
                    </select>
                </div>
            </div>
            <div class="form-group col-md-3">
                <button id="search" class="btn btn-dropbox btn-flat col-md-4">
                    <i class="fa fa-search"></i>&nbsp;搜索
                </button>
                <button id="add" class="btn btn-success btn-flat col-md-4 col-xs-offset-1 col-md-offset-1">
                    <i class="fa fa-plus"></i>&nbsp;新建
                </button>
            </div>
        </div>
    </div>
    <div class="row">
        @await Html.PartialAsync("_BuildingTablePartial")
    </div>
</section>

@section scripts{
    <environment include="Development">
        <script src="~/javascript/view/Administrator/building.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/javascript/view/Administrator/building.min.js" asp-append-version="true"></script>
    </environment>
}