<div class="col-xs-12">
    <div class="box">
        <div class="box-body">
            <table id="bulletin-table" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th class="text-center">编号</th>
                        <th class="text-center">部门名称</th>
                        <th class="text-center">联系电话</th>
                        <th class="text-center">电子邮箱</th>
                        <th class="text-center">所在校区</th>
                        <th class="text-center">通讯地址</th>
                        <th class="text-center">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 15; i++)
                    {
                        <tr class="text-center">
                            @{
                                int num = 20171011 + i;
                            }
                            <td>@num</td>
                            <td>后勤保卫处</td>
                            <td>13912345678</td>
                            <td>hq@example.com</td>
                            <td>文津校区</td>
                            <td>安徽省芜湖市弋江区文津西路8号</td>
                            <td>
                                <a asp-area="" asp-controller="" asp-action="" class="btn btn-xs btn-link">
                                    <i class="fa fa-pencil"></i>
                                    编辑
                                </a>
                                <a asp-area="" asp-controller="" asp-action="" class="btn btn-xs btn-link" id="delete">
                                    <i class="fa fa-trash-o"></i>
                                    删除
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>