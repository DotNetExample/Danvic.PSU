
@{
    ViewData["Title"] = "学生账户";
    ViewData["NavTitle"] = "基础信息管理";
    ViewData["CurrName"] = "学生账户管理";
}

<section class="content-header">
    <h1>
        学生账户
        <small>Student Data</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a asp-area="Administrator" asp-controller="Home" asp-action="Index">
                <i class="fa fa-dashboard"></i> 首页
            </a>
        </li>
        <li>基础信息</li>
        <li class="active">学生账户</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group col-md-3">
                <label class="control-label no-padding-right col-md-5 col-xs-4" for="code">学生学号：</label>
                <div class="input-group col-md-7 col-xs-8">
                    <input id="code" type="text" class="form-control">
                    <div class="input-group-addon">
                        <i class="fa fa-id-badge"></i>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label no-padding-right col-md-5 col-xs-4" for="name">学生姓名：</label>
                <div class="input-group col-md-7 col-xs-8">
                    <input id="name" type="text" class="form-control">
                    <div class="input-group-addon">
                        <i class="fa fa-user"></i>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label no-padding-right col-md-5 col-xs-4" for="majorclass">所属班级：</label>
                <div class="input-group col-md-7 col-xs-8">
                    <select id="majorclass" name="" class="form-control">
                        <option value="">请选择</option>
                        <option value="">网络工程1401</option>
                    </select>
                </div>
            </div>
            <div class="form-group col-md-3">
                <button id="search" class="btn btn-dropbox btn-flat col-md-4">
                    <i class="fa fa-search"></i>&nbsp;搜索
                </button>
                <a asp-area="Administrator" asp-controller="Basic" asp-action="EditStudent" class="btn btn-success btn-flat col-md-4 col-xs-offset-1 col-md-offset-1">
                    <i class="fa fa-plus"></i>&nbsp;新建
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        @await Html.PartialAsync("_StudentTablePartial")
    </div>
</section>

@section scripts{
    <environment include="Development">
        <script src="~/javascript/view/Administrator/studentaccount.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/javascript/view/Administrator/studentaccount.min.js" asp-append-version="true"></script>
    </environment>
}

