
@{
    ViewData["Title"] = "学校信息";
    ViewData["NavTitle"] = "学校信息管理";
    ViewData["CurrName"] = "基础信息维护";
}

@section styles{
    <environment include="Development">
        <link href="~/css/template/simditor.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/css/template/simditor.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
}

<section class="content-header">
    <h1>
        基础信息
        <small>School Information</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a asp-area="Administrator" asp-controller="Home" asp-action="Index">
                <i class="fa fa-dashboard"></i> 首页
            </a>
        </li>
        <li>学校信息</li>
        <li class="active">基础信息</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-sm-12">
            <form asp-area="" asp-controller="" asp-action="" class="form-horizontal" role="form">
                <div class="box box-solid">
                    <div class="box box-header">
                        <h3 class="box-title">综合信息</h3>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="box box-primary">
                                    <div class="box-body box-profile">
                                        <img src="~/images/template/photo1.png" class="img-responsive" alt="学校图片" />
                                    </div>
                                    <div class="box-footer">
                                        <a href="#" class="btn btn-sm btn-block btn-success">
                                            <i class="fa fa-plus-circle"></i>
                                            <span class="bigger-110">更换图片</span>
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-9">
                                <div class="box box-primary">
                                    <div class="box-body">
                                        <div class="form-group">
                                            <label class="col-md-2 control-label no-padding-right" for="name">
                                                <span class="required-label">*</span> 学校全称
                                            </label>
                                            <div class="col-md-3">
                                                <input type="text" id="name" class="form-control" placeholder="中文名称" />
                                            </div>
                                            <div class="col-md-3">
                                                <input type="text" id="name" class="form-control" placeholder="英文名称" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-2 control-label no-padding-right" for="datetime">建立时间</label>
                                            <div class="col-md-3 col-xs-8">
                                                <div class="input-group col-md-12">
                                                    <input id="datetime" class="form-control date-picker" type="text" readonly />
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-calendar"></i>
                                                    </span>
                                                </div>
                                            </div>
                                            <label class="col-md-2 control-label no-padding-right" for="code">院校代码</label>
                                            <div class="col-md-3 col-xs-8">
                                                <div class="input-group col-md-12">
                                                    <input id="code" class="form-control" type="text" />
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-id-badge"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-2 control-label no-padding-right" for="name"> 校训 </label>
                                            <div class="col-md-8">
                                                <input type="text" id="name" class="col-md-4 col-xs-10 form-control" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box box-solid">
                    <div class="box box-header">
                        <h3 class="box-title">校区信息</h3>
                        <button class="btn btn-minier btn-pink pull-right">
                            <i class="fa fa-plus"></i>
                            添加校区
                        </button>
                    </div>
                    <div class="box-body">
                        @*<div id="campus">
                            <div class="form-group">
                                <label class="col-md-2 control-label no-padding-right" for="form-field-email">
                                    <span class="required-label">*</span> 校区名称
                                </label>
                                <div class="col-md-5">
                                    <input type="text" class="form-control" id="name" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label no-padding-right" for="form-field-phone">
                                    <span class="required-label">*</span> 联系电话
                                </label>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="form-field-phone" />
                                        <span class="input-group-addon">
                                            <i class="fa fa-phone fa-flip-horizontal grey"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <label class="col-md-2 control-label no-padding-right" for="form-field-phone"> 邮编 </label>
                                    <div class="col-md-8">
                                        <input type="text" id="name" class="col-md-10 col-xs-10 form-control" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label no-padding-right" for="name">
                                    <span class="required-label">*</span> 所在地
                                </label>
                                <div class="col-md-10 form-inline">
                                    <select name="" class="form-control">
                                        <option>省份</option>
                                    </select>
                                    <select name="" class="form-control">
                                        <option>城市</option>
                                    </select>
                                    <select name="" class="form-control">
                                        <option>县区</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label no-padding-right" for="name">
                                    <span class="required-label">*</span> 详细地址
                                </label>
                                <div class="col-md-8">
                                    <input type="text" id="name" class="form-control col-md-8" />
                                </div>
                            </div>
                        </div>*@
                    </div>
                </div>
                <div class="box box-solid">
                    <div class="box box-header">
                        <h3 class="box-title">联系方式</h3>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="form-group col-md-4">
                                <label class="col-md-4 control-label no-padding-right" for="form-field-website">
                                    <span class="required-label">*</span> 官方网站
                                </label>
                                <div class="col-md-8">
                                    <div class="input-group">
                                        <input id="form-field-website" class="form-control" type="text" />
                                        <span class="input-group-addon">
                                            <i class="fa fa-globe"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <label class="col-md-4 control-label no-padding-right" for="form-field-twitter"> 官方微博 </label>
                                <div class="col-md-8">
                                    <div class="input-group">
                                        <input id="form-field-website" class="form-control" type="text" />
                                        <span class="input-group-addon">
                                            <i class="fa fa-weibo text-red"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <label class="col-md-4 control-label no-padding-right" for="form-field-facebook"> 公众号 </label>
                                <div class="col-md-8">
                                    <div class="input-group">
                                        <input type="text" id="form-field-facebook" class="form-control" />
                                        <span class="input-group-addon">
                                            <i class="fa fa-weixin text-green"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-4">
                                <label class="col-md-4 control-label no-padding-right" for="form-field-email">
                                    <span class="required-label">*</span> 电子邮箱
                                </label>
                                <div class="col-md-8">
                                    <div class="input-group">
                                        <input type="email" id="form-field-email" class="form-control" />
                                        <span class="input-group-addon">
                                            <i class="fa fa-envelope text-yellow"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <label class="col-md-4 control-label no-padding-right" for="form-field-phone">官方QQ</label>
                                <div class="col-md-8">
                                    <div class="input-group">
                                        <input type="email" id="form-field-email" class="form-control" />
                                        <span class="input-group-addon">
                                            <i class="fa fa-qq fa-flip-horizontal text-light-blue"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box box-solid">
                    <div class="box box-header">
                        <div class="box-title">详细信息</div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-12 col-xs-12">
                                    <textarea id="detail" class="form-control"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix">
                    <div class="text-right">
                        <button class="btn btn-success" type="submit">
                            <i class="ace-icon fa fa-check"></i>
                            保存
                        </button>
                        &nbsp; &nbsp;
                        <button class="btn" type="reset">
                            <i class="ace-icon fa fa-undo"></i>
                            重置
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section scripts{
    <environment include="Development">
        <script src="~/javascript/template/module.js"></script>
        <script src="~/javascript/template/hotkeys.js"></script>
        <script src="~/javascript/template/uploader.js"></script>
        <script src="~/javascript/template/simditor.js"></script>
        <script src="~/javascript/view/Administrator/information.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/javascript/view/Administrator/information.min.js" asp-append-version="true"></script>
    </environment>
}