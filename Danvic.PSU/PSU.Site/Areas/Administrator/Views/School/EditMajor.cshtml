
@{
    ViewData["Title"] = "专业信息";
    ViewData["NavTitle"] = "学校信息管理";
    ViewData["CurrName"] = "专业信息维护";
}

@section styles{
    <environment include="Development">
        <link href="~/css/template/simditor.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/css/template/simditor.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
}

<section class="content-header">
    <h1>
        专业信息
        <small>Major Information</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a asp-area="Administrator" asp-controller="Home" asp-action="Index">
                <i class="fa fa-dashboard"></i> 首页
            </a>
        </li>
        <li>学校信息</li>
        <li class="active">
            <a asp-area="Administrator" asp-controller="School" asp-action="Major">
                专业信息
            </a>
        </li>
        <li class="active">编辑</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <form asp-area="Administrator" asp-controller="School" asp-action="EditMajor" method="post" class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-md-2 col-xs-3 control-label no-padding-right" for="title"> 专业名称： </label>
                    <div class="col-md-4 col-xs-9">
                        <input class="col-md-5 col-xs-12 form-control" id="title" type="text" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 col-xs-3 control-label no-padding-right" for="target"> 专业所属系部： </label>
                    <div class="col-md-2 col-xs-9">
                        <select id="target" class="form-control">
                            <option value="">请选择</option>
                        </select>
                    </div>
                    <label class="col-md-2 col-xs-3 control-label no-padding-right" for="title"> 专业代码： </label>
                    <div class="col-md-2 col-xs-9">
                        <input class="col-md-5 col-xs-12 form-control" id="title" type="text" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 col-xs-3 control-label no-padding-right" for="editor"> 公告内容： </label>
                    <div class="col-md-9 col-xs-9">
                        <textarea class="col-md-6" rows="3" id="editor"></textarea>
                    </div>
                </div>
                <div class="clearfix">
                    <div class="text-left">
                        <button class="btn btn-success col-md-offset-2" type="submit">
                            <i class="ace-icon fa fa-check"></i>
                            保存
                        </button>
                        &nbsp; &nbsp;
                        <button class="btn" type="reset">
                            <i class="ace-icon fa fa-undo"></i>
                            重置
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section scripts{
    <environment include="Development">
        <script src="~/javascript/template/module.js"></script>
        <script src="~/javascript/template/hotkeys.js"></script>
        <script src="~/javascript/template/uploader.js"></script>
        <script src="~/javascript/template/simditor.js"></script>
        <script src="~/javascript/view/Administrator/editmajor.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/javascript/view/Administrator/editmajor.min.js" asp-append-version="true"></script>
    </environment>
}