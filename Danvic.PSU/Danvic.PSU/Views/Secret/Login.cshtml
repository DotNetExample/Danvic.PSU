<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>登录 - Danvic.PSU</title>
    <environment include="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
        <link href="~/lib/Ionicons/css/ionicons.css" rel="stylesheet" />
        <link href="~/css/template/AdminLTE.css" rel="stylesheet" />
        <link href="~/css/template/green.css" rel="stylesheet" />
        <style type="text/css">
            .login-msg-box {
                margin-bottom: 25px;
            }
            .login-error-msg {
                margin-top: 3px;
                background-color: #FF7851 !important;
            }
        </style>
    </environment>
    <environment exclude="Development">
        <link href="https://cdn.bootcss.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute">
        <link href="https://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
              asp-fallback-href="~/lib/font-awesome/css/font-awesome.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute">
        <link href="http://cdn.bootcss.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet"
              asp-fallback-href="~/lib/Ionicons/css/ionicons.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link href="~/css/template/AdminLTE.min.css" rel="stylesheet" asp-append-version="true" />
        <style type="text/css">
            .login-msg-box {
                margin-bottom: 25px;
            }

            .login-error-msg {
                margin-top: 3px;
                background-color: #FF7851 !important;
            }
        </style>
    </environment>
</head>
<body class="hold-transition login-page">

    <div class="login-box">
        <div class="login-logo">
            <b>Danvic.PSU</b>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">Welcome to Danvic.PSU</p>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                @*<div asp-validation-summary="All" class="alert alert-danger"></div>*@
                <div class="form-group has-feedback login-msg-box">
                    <input type="text" class="form-control" asp-for="Account" placeholder="登录名">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    <span asp-validation-for="Account" class="label label-danger col-sm-12 col-xs-12 login-error-msg"></span>
                </div>
                <div class="form-group has-feedback login-msg-box">
                    <input type="password" class="form-control" asp-for="Password" placeholder="密码">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    <span asp-validation-for="Password" class="label label-danger col-sm-12 col-xs-12 login-error-msg"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe">
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <a class="btn btn-block btn-flat btn-xs" asp-action="ForgotPassword">忘记密码</a>
                    </div>
                </div>
                <div class="social-auth-links text-center">
                    <button type="submit" class="btn btn-success btn-block btn-flat">
                        <i class="fa fa-sign-in"></i> 登录
                    </button>
                </div>
            </form>
        </div>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/javascript/template/icheck.js"></script>
        <script type="text/javascript">
            $(function () {
                $('input').iCheck({
                    checkboxClass: 'icheckbox_flat-green',
                    radioClass: 'iradio_flat-green',
                    increaseArea: '20%' /* optional */
                });
            });
        </script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.bootcss.com/jquery/2.2.4/jquery.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js">
        </script>
        <script src="https://cdn.bootcss.com/bootstrap/3.3.6/js/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js">
        </script>
        <script src="https://cdn.bootcss.com/iCheck/1.0.1/icheck.min.js"
                asp-fallback-src="~/javascript/template/icheck.min.js">
        </script>
        <script type="text/javascript" asp-append-version="true">
            $(function () {
                $('input').iCheck({
                    checkboxClass: 'icheckbox_flat-green',
                    radioClass: 'iradio_flat-green',
                    increaseArea: '20%' /* optional */
                });
            });
        </script>
    </environment>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }

</body>
</html>


